{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["prettier", "import"],
    "rules": {
        "max-depth": ["error", 2],
        "max-lines-per-function": ["error", 15],
        "no-underscore-dangle": "off",
        "import/extensions": ["off"],
        "prefer-template": "off",
        "class-methods-use-this": "off",
        "no-restricted-globals": "off",
        "import/no-cycle": "off",
        "no-nested-ternary": "off",
        "dot-notation": "off"
    }
}
